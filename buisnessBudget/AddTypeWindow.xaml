<Window x:Class="BudgetTracker.View.NewTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Type" Height="150" Width="250" MinHeight="150" MinWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="64*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="tbNewType" Margin="10,10,10,0" Grid.ColumnSpan="2" Height="33" VerticalAlignment="Top"/>

        <Button Name="btnSaveType" Content="Save" Margin="10,0,10,0" Click="btnSaveType_Click" Grid.Column="1" Grid.Row="1" Height="20" VerticalAlignment="Center"/>
        <Button Name="btnCancelType" Content="Cancel" Margin="10,0,10,0" Click="btnCancelType_Click" Grid.Row="1" Height="20" VerticalAlignment="Center"/>

    </Grid>
</Window>
